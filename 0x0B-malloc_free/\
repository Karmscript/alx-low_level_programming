#include "main.h"
#include <stdlib.h>
#include <string.h>

/**
  * _strdup - returns a pointer to a newly allocated space in memory
  * @str: string of unknown size
  */
char *_strdup(char *str)
{
	str_length = strlen(str);
	char *copy = (char *)malloc((str_length + 1) * sizeof(char));
	int i;

	if (str == NULL)
	{
		return (NULL);
	}
	for (i = 0; i <= str_length; i++)
	{
		str_length[i] = copy[i];
		return (copy);
	}
	if (copy == NULL)
		return (NULL);
}
